<Window x:Class="WpfAlarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAlarm"
        Background="Black"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="Title" Content="Alarm App" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" Foreground="WhiteSmoke"/>
        <Label x:Name="TimeDisplay" Content="##Time##" HorizontalAlignment="Center" VerticalAlignment="Center" Width="163" HorizontalContentAlignment="Center" Foreground="WhiteSmoke"/>
        
    </Grid>
</Window>
